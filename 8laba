	int  god_osnovaniya;
	int  naselenie;
	int  ploshad;
};
int func(int i, strany svedeniya_o_stranah[20], int* N) {
	
		printf("Vvedite nazvanie strany: ");
		scanf("%c", (svedeniya_o_stranah[i]).nazvanie);
		printf("Vvedite stolicu strany: ");
		scanf("%c", (svedeniya_o_stranah[i]).stolica);
		printf("Vvedite god osnovaniya strany: ");
